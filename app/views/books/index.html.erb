<h2>User info</h2>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
<div>
  <%= f.label :Title %>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :Opinion %>
  <%= f.text_field :opinion %>
</div>
<div>
  <%= f.submit "Create Book" %>
</div>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td></td>
      <td><%= book.title %></td>
      <td><%= book.opinion %></td>
    </tr>
  </tbody>
  <% end %>
</table>